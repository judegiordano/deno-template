{
  "$schema": "https://deno.land/x/deno@v1.17.3/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["git/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["git/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}
